@model AIUBStudentPortal.BLL.DTOs.StudentDTO

@{
    ViewBag.Title = "Student Registration"; // Set page title
                                            // Ensure your CSS is linked. If you already link LoginStyles.css in _Layout.cshtml,
                                            // you can remove this line. Otherwise, keep it.
    <link href="~/Content/LoginStyles.css" rel="stylesheet" type="text/css" />
}

<div class="login-page-container">
    @* Reusing the container for centering *@
    <div class="login-box">
        @* Reusing the card styling *@
        <h2 class="form-title">Student Registration</h2> @* A title for the registration form *@

        @using (Html.BeginForm("Register", "AIUBportal", FormMethod.Post))
        {
            @Html.AntiForgeryToken() @* Good practice for MVC forms to prevent CSRF attacks *@

            <div class="form-group">
                @* Grouping for better styling of input + validation message *@
                @Html.LabelFor(m => m.FullName, new { @class = "sr-only" })
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Full Name", @autocomplete = "name" })
                @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "field-validation-error" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.StudentID, new { @class = "sr-only" })
                @Html.TextBoxFor(m => m.StudentID, new { @class = "form-control", placeholder = "Student ID", @autocomplete = "off" })
                @Html.ValidationMessageFor(m => m.StudentID, "", new { @class = "field-validation-error" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "sr-only" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", @autocomplete = "email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "field-validation-error" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Department, new { @class = "sr-only" })
                @Html.TextBoxFor(m => m.Department, new { @class = "form-control", placeholder = "Department", @autocomplete = "organization" })
                @Html.ValidationMessageFor(m => m.Department, "", new { @class = "field-validation-error" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ContactNumber, new { @class = "sr-only" })
                @Html.TextBoxFor(m => m.ContactNumber, new { @class = "form-control", placeholder = "Contact Number (e.g., 01XXXXXXXXX)", @autocomplete = "tel" })
                @Html.ValidationMessageFor(m => m.ContactNumber, "", new { @class = "field-validation-error" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "sr-only" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", @autocomplete = "new-password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "field-validation-error" })
            </div>

            @* You might want to add a confirm password field here for a real registration form *@
            @*
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "sr-only" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password", @autocomplete = "new-password" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "field-validation-error" })
                </div>
            *@

            <input type="submit" value="Register" class="btn btn-primary btn-block" />

            <div class="text-center mt-3">
                @* Add a link back to login if desired *@
                <p>Already have an account? @Html.ActionLink("Login here", "Login", "AIUBportal")</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}